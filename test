    <script>
        AOS.init();
        const swiper = new Swiper('.mySwiper', { autoplay: { delay: 3000 }, pagination: { el: '.swiper-pagination' } });
        const testimonialSwiper = new Swiper('.testimonialSwiper', { autoplay: { delay: 5000 }, pagination: { el: '.swiper-pagination' } });
        
        function hitungBiaya() {
            const jumlah = document.getElementById('jumlahOrang').value;
            const paket = document.getElementById('paketSelect').value;
            const total = jumlah * paket;
            document.getElementById('hasilBiaya').innerText = `Total Biaya: Rp ${total.toLocaleString()}`;
        }
        
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Pesan Anda telah dikirim! Kami akan segera menghubungi.');
        });
    </script>
